<Calculator>:
    orientation: "vertical"
    Label: #Campo de Operacoes
        text: ""
        id: value
        font_size: 65
        color: 0, 1, 0, 2
    BoxLayout: #Top Layout
        Button: #Reseta o campo de Operacoes
            text: "C"
            id: zerar
            on_release: value.text = ""
            background_color: [1, 2, 4, 2]
            font_size: 40
        Button: #adiciona divisao ao campo
            text: "/"
            id: divisao
            on_release: value.text = (value.text)+"/"
            background_color: [1, 2, 2, 1]
            font_size: 35
        Button: #adiciona multiplicacao ao campo
            text: "x"
            id: multiplicacao
            on_release: value.text = (value.text)+"*"
            background_color: [1, 2, 2, 1]
            font_size: 35
        Button: #Botao que invoca a funcao apagar do arquivo main
            text: "<--"
            id: apagar
            on_release: value.text = root.apagar(value.text)
            background_color: [1, 2, 2, 1]
        Button: #Botao que invoca a funcao Solve (resolver)
            text: "=="
            id: resultado
            font_size: 45
            background_color: [1, 2, 4, 2]
            on_release: value.text = root.solve(value.text)
    BoxLayout: #Mid Layout
        GridLayout: #Left Layout - Tecaldo Numerico
            cols: 3
            rows: 3
            Button:
                text: "1"
                id: number1
                on_release: value.text = (value.text)+"1"
                font_size: 50
                background_color: [2, 1, 1, 1]
            Button:
                text: "2"
                id: number2
                on_release: value.text = (value.text)+"2"
                font_size: 50
                background_color: [3, 1, 1, 1]
            Button:
                text: "3"
                id: number3
                on_release: value.text = (value.text)+"3"
                font_size: 50
                background_color: [2, 1, 1, 1]
            Button:
                text: "4"
                id: number4
                on_release: value.text = (value.text)+"4"
                font_size: 50
                background_color: [3, 1, 1, 1]
            Button:
                text: "5"
                id: number5
                on_release: value.text = (value.text)+"5"
                font_size: 50
                background_color: [2, 1, 1, 1]
            Button:
                text: "6"
                id: number6
                on_release: value.text = (value.text)+"6"
                font_size: 50
                background_color: [3, 1, 1, 1]
            Button:
                text: "7"
                id: number7
                on_release: value.text = (value.text)+"7"
                font_size: 50
                background_color: [2, 1, 1, 1]
            Button:
                text: "8"
                id: number8
                on_release: value.text = (value.text)+"8"
                font_size: 50
                background_color: [3, 1, 1, 1]
            Button:
                text: "9"
                id: number9
                on_release: value.text = (value.text)+"9"
                font_size: 50
                background_color: [2, 1, 1, 1]
        BoxLayout: #Right Layout - Demais operadores
            orientation: "vertical"
            Button:
                text: "-"
                id: subtrair
                on_release: value.text = (value.text)+"-"
                font_size: 45
                background_color: [3, 2, 1, 1]
            Button:
                text: "+"
                id: soma
                on_release: value.text = (value.text)+"+"
                font_size: 45
                background_color: [3, 2, 1, 1]
            Button:
                text: ","
                id: virgula
                on_release: value.text = (value.text)+"."
                font_size: 45
                background_color: [3, 2, 1, 1]
    BoxLayout: #Bottom Layout
        Button:
            text: "0"
            id: zero
            on_release: value.text = (value.text)+"0"
            font_size: 48
            background_color: [2, 1, 1, 1]
        Button:
            text: "RaizQ"
            id: raizQ
            on_release: value.text = (value.text)+"**(1/2)"
            background_color: [1, 2, 1, 1]
            font_size: 35
        Button:
            text: "Elevar"
            id: potencia
            on_release: value.text = (value.text)+"**"
            background_color: [1, 2, 1, 1]
            font_size: 35
        Button:
            text: "("
            id: abre_parenteses
            on_release: value.text = (value.text)+"("
            background_color: [1, 2, 1, 1]
            font_size: 35
        Button:
            text: ")"
            id: fecha_parenteses
            on_release: value.text = (value.text)+")"
            background_color: [1, 2, 1, 1]
            font_size: 35
